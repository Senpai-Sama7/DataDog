      "sections": [
        {
          "title": "From files to tables",
          "body": "Compare CSV, JSON, and relational tables. Map rows to records and columns to fields. Note why consistent types reduce cleaning effort."
        },
        {
          "title": "Keys and relationships",
          "body": "Define primary keys and foreign keys. Explore one-to-many vs many-to-many. Learn why surrogate keys are common."
        },
        {
          "title": "Nulls, constraints, and integrity",
          "body": "Understand NULL vs empty string, uniqueness, and referential integrity. See how constraints prevent silent data drift."
        }
      ],
      "embedded_questions": [
        {"type": "mcq", "prompt": "Which best describes a foreign key?", "options": ["Unique identifier in its own table", "Field that references a primary key in another table", "Freeform text column"], "answer_index": 1, "rationale": "FK references a PK in a different table."},
        {"type": "mcq", "prompt": "CSV is usually considered:", "options": ["Structured", "Semi-structured", "Unstructured"], "answer_index": 1, "rationale": "CSV lacks enforced schema but is tabular-like."},
        {"type": "fitb", "prompt": "A column allowed to have no value is recorded as ______.", "answer": "NULL"},
        {"type": "mcq", "prompt": "A many-to-many relationship typically requires:", "options": ["Two FKs in each table", "A junction table", "A composite PK only"], "answer_index": 1, "rationale": "Use a bridge table with two FKs."},
        {"type": "mcq", "prompt": "Which field is the best primary key for People?", "options": ["FullName", "Email that can change", "PersonID surrogate"], "answer_index": 2},
        {"type": "fitb", "prompt": "Referential integrity ensures every FK points to an existing ______.", "answer": "PK"}
      ]
    },
    "narrated_slides": {
      "slides": [
        {"title": "The data landscape", "bullets": ["Structured vs semi-structured vs unstructured", "Files vs databases", "Why schemas matter"]},
        {"title": "Relational building blocks", "bullets": ["Tables, rows, columns", "Primary keys", "Foreign keys"]},
        {"title": "Cardinality patterns", "bullets": ["1-to-1", "1-to-many", "many-to-many with junctions"]},
        {"title": "Nulls and constraints", "bullets": ["NULL vs empty", "UNIQUE, NOT NULL, CHECK", "Referential integrity"]},
        {"title": "Choosing keys", "bullets": ["Natural vs surrogate", "Stability, meaning, performance"]}
      ],
      "speaker_notes": "Use real examples from the lab. Pause after each concept for a 1-item check."
    },
    "audio_lesson_script": {
      "scenes": [
        {"teacher": "What breaks when a FK points to nothing?", "student": "Reports miscount. Orphaned rows."},
        {"teacher": "When might a natural key be risky?", "student": "If it changes. Emails and names often change; better use a surrogate ID."}
      ],
      "duration_minutes": 6
    },
    "mind_map": {
      "nodes": [
        {"id": "root", "label": "Data Structures"},
        {"id": "files", "label": "Files: CSV, JSON"},
        {"id": "db", "label": "Relational DB"},
        {"id": "keys", "label": "PK & FK"},
        {"id": "card", "label": "Cardinality"},
        {"id": "nulls", "label": "Nulls & Constraints"},
        {"id": "dict", "label": "Data Dictionary"}
      ],
      "edges": [
        ["root", "files"], ["root", "db"], ["db", "keys"], ["db", "card"], ["db", "nulls"], ["root", "dict"]
      ]
    }
  },
  "hands_on": {
    "lab": {
      "title": "Mini retail schema and dictionary",
      "scenario": "You receive Orders.csv and Customers.csv for a regional shop.",
      "steps": [
